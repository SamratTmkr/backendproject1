<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>
<body>
<div class="main min-h-screen bg-zinc-200 w-full">
<div class="form p-10 text-black">
    <form action="/create" method="post">
        <input class="block outline-none px-5 py-2 w-full rounded-md bg-blue-200" type="text" placeholder="Title goes here" name="title">


        <textarea class="block px-5 w-full rounded-md py-2 bg-blue-200 mt-2 resize-none" placeholder="write your task details" id="" name="details">

        </textarea>

        <input  class="mt-2 bg-blue-600 cursor-pointer px-2 py-5 rounded-md" value="Create Task" type="submit">
    </form>
</div>
<div class="task p-10">
<% if (files.length > 0) { %>
  <% files.forEach(function(val) { %>
    <div class="task w-72 px-3 py-4 bg-blue-200 rounded-md mb-4">
      <h1 class="text-black text-2xl font-semibold"><%= val.replace('.txt', '') %></h1>
      <a class="text-blue-500 inline-block mt-3" href="/read/<%= val %>">Read More</a>
    </div>
  <% }) %>
<% } else { %>
  <h3>No tasks yet</h3>
<% } %>


</div>
</div>
</body>
</html>